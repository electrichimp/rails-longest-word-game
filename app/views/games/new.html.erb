<h1>New game</h1>

<div class="cards">
  <% @letters.each do |letter| %>
    <div class="card"><%= letter.upcase %></div>
  <% end %>
</div>

<div class="input-container">
  <form action="/score" method="post">
    <input type="text" name="word" placeholder="Que palabra encuentras?">
    <input type="hidden" name="letters" value="<%=@letters.join%>">
    <input type="submit" value="Mandar!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
